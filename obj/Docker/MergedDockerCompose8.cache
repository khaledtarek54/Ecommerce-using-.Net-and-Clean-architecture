name: dockercompose6236696384370991029
services:
  ecommerce.database:
    container_name: ecommerce.database
    environment:
      POSTGRES_DB: ecommerce
      POSTGRES_PASSWORD: postgres
      POSTGRES_USER: postgres
    image: postgres:latest
    networks:
      default: null
    ports:
      - mode: ingress
        target: 5432
        published: "5432"
        protocol: tcp
    volumes:
      - type: volume
        source: db
        target: /var/lib/postgresql/data
        volume: {}
  ecommerce.web:
    build:
      context: E:\.net projects\Ecommerce-project
      dockerfile: Ecommerce/Dockerfile
    container_name: ecommerce.api
    environment:
      ASPNETCORE_ENVIRONMENT: Development
      ASPNETCORE_HTTP_PORTS: "5000"
      ASPNETCORE_HTTPS_PORTS: "5001"
    image: ecommerceweb
    networks:
      default: null
    ports:
      - mode: ingress
        target: 5000
        published: "5000"
        protocol: tcp
      - mode: ingress
        target: 5001
        published: "5001"
        protocol: tcp
    volumes:
      - type: bind
        source: C:\Users\Khaled\AppData\Roaming/Microsoft/UserSecrets
        target: /home/app/.microsoft/usersecrets
        read_only: true
        bind:
          create_host_path: true
      - type: bind
        source: C:\Users\Khaled\AppData\Roaming/ASP.NET/Https
        target: /home/app/.aspnet/https
        read_only: true
        bind:
          create_host_path: true
  migrate:
    command:
      - /bin/bash
      - -c
      - cd /src && dotnet ef migrations add InitialCreate -c ApplicationDbContext --project Ecommerce.Infrastructure/Ecommerce.Infrastructure.csproj --startup-project Ecommerce/Ecommerce.csproj
    depends_on:
      ecommerce.database:
        condition: service_started
        required: true
    image: mcr.microsoft.com/dotnet/sdk:8.0
    networks:
      default: null
    volumes:
      - type: bind
        source: E:\.net projects\Ecommerce-project
        target: /src
        bind:
          create_host_path: true
  pgadmin:
    container_name: pgadmin
    environment:
      PGADMIN_DEFAULT_EMAIL: admin@example.com
      PGADMIN_DEFAULT_PASSWORD: admin
    image: dpage/pgadmin4
    networks:
      default: null
    ports:
      - mode: ingress
        target: 80
        published: "5050"
        protocol: tcp
networks:
  default:
    name: dockercompose6236696384370991029_default
volumes:
  db:
    name: dockercompose6236696384370991029_db